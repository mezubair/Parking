{{>adminHead}}
{{>adminNavbar}}

{{>sidebar}}



<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="dashboard">
                    <em class="fa fa-home"></em>
                </a></li>
            <li class="active">Outgoing Vehicle Management</li>
        </ol>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            <!-- <h1 class="page-header">Vehicle Management</h1> -->
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Outgoing Vehicles</div>
                <div class="panel-body">


                    <div class="table-responsive">
                        <table id="example" class="table table-striped table-hover table-bordered" style="width:100%">

                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Vehicle No.</th>
                                    <th>Company</th>
                                    <th>Category</th>
                                    <th>Parking Number</th>
                                    <th>Charge</th>
                                    <th>Vehicle's Owner</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each status}}
                                <tr>

                                    <td>
                                        {{addOne @index}}
                                    </td>

                                    <td>
                                        {{this.registrationNumber}}
                                    </td>

                                    <td>
                                        {{this.vehicleCompanyname}}
                                    </td>

                                    <td>
                                        {{this.vehicleCategory}}
                                    </td>

                                    <td>
                                        {{this.parkingNumber}}
                                    </td>

                                    <td>
                                        {{this.totalCharge}} &#8377
                                    </td>

                                    <td>
                                        {{this.ownerName}}
                                    </td>

                                    <td><a href="outgoing-detail/{{this._id}}"><button type="button"
                                                class="btn btn-sm btn-info">View
                                                Details</button></a>
                                        <a href="print-receipt/{{this._id}}"><button type="button"
                                                class="btn btn-sm btn-warning"> <i class="fa fa-print"></i></button>
                                    </td>

                                </tr>

                                {{/each}}


                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div><!--/.row-->






</div> <!--/.main-->






</body>

</html>