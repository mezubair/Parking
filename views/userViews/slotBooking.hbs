                                            <option value="Anantnag">Anantnag</option>
                                            <option value="Budgam">Budgam</option>
                                            <option value="Srinagar">Srinagar</option>
                                        </select>
                                        <label for="districtDropdown">City</label>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="form-floating">
                                        <select required class="form-select" id="localityDropdown"
                                            aria-label="Floating label select example">
                                            <option selected>Select City First</option>
                                        </select>
                                        <label for="localityDropdown">Locality</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center mt-5">
                                <div class="col-md-3">
                                    <div class="form-floating">
                                        <button type="button" class="btn-solid-reg"
                                            onclick="requestLocationAccess()">Search</button>
                                    </div>
                                </div>
                            </div>

                        </form>



                    </div>
                    <!-- end of text-container -->
                </div>
                <!-- end of col -->
                <div class="col-lg-6 col-xl-5">
                    <div class="image-container">
