    <div id="details" class="basic-1">
        <div class="container">
            <div class="row">
                <div class="col-lg- col-xl-6">
                    <div class="text-container" style="margin-top:100px;">
                        <h2>You are just one step away !</h2>
                        <p>Select the city where you want to park your Vehicle.</p>
                        <!-- Search Form -->
                        <form id="searchForm" action="/slotBooking" method="post" onsubmit="requestLocationAccess()">
                            <div class="row g-2">
                                <div class="col-md">
                                    <div class="form-floating">
                                        <select required class="form-select" id="districtDropdown"
                                            aria-label="Floating label select example" onchange="populateLocalities()">
